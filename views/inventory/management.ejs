<% if (title) { %>
    <h1 class="page-title-management"><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

    
    <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>

      <% if (notice) { %>
        <div class="alert alert-warning">
          <%= notice %>
        </div>
      <% } %>

      <div class="redirect-links">
        <a href="/inv/add-classification" class="redirect-link">Add new classification</a>
        <a href="/inv/add-inventory" class="redirect-link">Add new inventory</a>
      </div>

      <div class="classification-select" >
        <h2>Manage Inventory</h2>
        <p>Choose a classification to see related inventory</p>
        <%- classificationSelect %>
        <table id="inventoryDisplay"></table>
        <noscript>JavaScript must be enabled to use this page.</noscript>

      </div>
      
<script src="../../js/inventory.js"></script>

      