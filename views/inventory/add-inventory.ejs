<% if (title) { %>
    <h1 class="page-title-management"><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

    
    <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>

      <% if (notice) { %>
        <div class="alert alert-warning">
          <%= notice %>
        </div>
      <% } %>


      <div class="add-inventory-container">
        <h2>Create new inventory item</h2>
        <form id="addInventoryForm" action="/inv/add-inventory" method="post" class="form-add-inventory">
            <div class="form-group">
                <label for="classification_name">Classification</label>
                <%- classificationList %>
            </div>
            <div class="form-group">
              <label for="inv_make">Make</label>
              <input type="text" id="inv_make" name="inv_make" value="<%=locals.inv_make %>" required pattern="[a-zA-Z0-9\s]*" title="Make must contain only letters and numbers" minlength="3" maxlength="30" placeholder="min 3 characters">
            </div>
            <div class="form-group">
              <label for="inv_model">Model</label>
              <input type="text" id="inv_model" name="inv_model" value="<%= locals.inv_model %>" required pattern="[a-zA-Z0-9\s]*" title="Model must contain only letters and numbers" minlength="3" maxlength="30" placeholder="min 3 characters">
            </div>
            <div class="form-group">
              <label for="inv_description">Description</label>
              <textarea id="inv_description" name="inv_description" required minlength="3" maxlength="255" placeholder="min 3 characters"><%= locals.inv_description %></textarea>
            </div>
            <div class="form-group">
              <label for="inv_image">Image Path (include /images/vehicles/ and file extension)</label>
              <input type="text" id="inv_image" name="inv_image" required value="<%= locals.inv_image || "/images/vehicles/no-image.png" %>" title="Image path must contain only letters and numbers" minlength="3" maxlength="255" placeholder="/images/vehicles/no-image.png">
            </div>
            <div class="form-group">  
              <label for="inv_thumbnail">Thumbnail Path (include /images/vehicles/ and file extension)</label>
              <input type="text" id="inv_thumbnail" name="inv_thumbnail" required  value="<%= locals.inv_thumbnail || "/images/vehicles/no-image.png" %>" title="Thumbnail path must contain only letters and numbers" minlength="3" maxlength="255" placeholder="/images/vehicles/no-image.png">
            </div>
            <div class="form-group">  
              <label for="inv_price">Price</label>
              <input type="number" id="inv_price" name="inv_price" required pattern="[0-9]*([.,][0-9]+)?" value="<%= locals.inv_price %>" title="Price must contain only numbers and decimals" minlength="1" maxlength="10" placeholder="min 1 digit">
            </div>
            <div class="form-group">
              <label for="inv_year">Year</label>
              <input type="number" id="inv_year" name="inv_year" required pattern="[0-9]*" value="<%= locals.inv_year %>" title="Year must contain only numbers" minlength="4" maxlength="4" placeholder="4 digits">
            </div>
            <div class="form-group">
              <label for="inv_miles">Miles</label>
              <input type="number" id="inv_miles" name="inv_miles" required pattern="[0-9]*" value="<%= locals.inv_miles %>" title="Miles must contain only numbers" minlength="1" maxlength="10" placeholder="min 1 digit">
            </div>
            <div class="form-group">
              <label for="inv_color">Color</label>
              <input type="text" id="inv_color" name="inv_color" required pattern="[a-zA-Z0-9\s]*" value="<%= locals.inv_color %>" title="Color must contain only letters and numbers" minlength="3" maxlength="30" placeholder="min 3 characters">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Add Classification</button>
            </div>
        </form>
    </div>

