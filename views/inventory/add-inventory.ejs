<% if (title) { %>
    <h1 class="page-title-management"><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

    
    <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>

      <% if (notice) { %>
        <div class="alert alert-warning">
          <%= notice %>
        </div>
      <% } %>


      <div class="add-classification-container">
        <h2>Create new classification</h2>
        <p>Classification name must contain only letters</p>
        <form id="addClassificationForm" action="/inv/add-classification" method="post" class="form-add-classification">
            <div class="form-group">
                <label for="classification_name">Classification</label>
                <%- classificationList %>
            </div>
            <div class="form-group">
              <label for="inv_make">Make</label>
              <input type="text" id="inv_make" name="inv_make" required pattern="[a-zA-Z]*" title="Make must contain only letters" minlength="3" maxlength="30" placeholder="min 3 characters">
            </div>
            <div class="form-group">
              <label for="inv_model">Model</label>
              <input type="text" id="inv_model" name="inv_model" required pattern="[a-zA-Z]*" title="Model must contain only letters" minlength="3" maxlength="30" placeholder="min 3 characters">
            </div>
            <div class="form-group">
              <label for="inv_description">Description</label>
              <textarea id="inv_description" name="inv_description" required minlength="3" maxlength="255" placeholder="min 3 characters"></textarea>
            </div>
            <div class="form-group">
              <label for="inv_image">Image Path (include /images/vehicles/ and file extension)</label>
              <input type="text" id="inv_image" name="inv_image" required pattern="[a-zA-Z0-9]*" value="/images/vehicles/no-image.png" title="Image path must contain only letters and numbers" minlength="3" maxlength="255" placeholder="/images/vehicles/example.png">
            </div>
            <div class="form-group">  
              <label for="inv_thumbnail">Thumbnail Path (include /images/vehicles/ and file extension)</label>
              <input type="text" id="inv_thumbnail" name="inv_thumbnail" required pattern="[a-zA-Z0-9]*" value="/images/vehicles/no-image.png" title="Thumbnail path must contain only letters and numbers" minlength="3" maxlength="255" placeholder="/images/vehicles/example.png">
            </div>
            <div class="form-group">  
              <label for="inv_price">Price</label>
              <input type="text" id="inv_price" name="inv_price" required pattern="[0-9]*([.,][0-9]+)?" title="Price must contain only numbers and decimals" minlength="1" maxlength="10" placeholder="min 1 digit">
            </div>
            <div class="form-group">
              <label for="inv_year">Year</label>
              <input type="text" id="inv_year" name="inv_year" required pattern="[0-9]*" title="Year must contain only numbers" minlength="4" maxlength="4" placeholder="4 digits">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Add Classification</button>
            </div>
        </form>
    </div>